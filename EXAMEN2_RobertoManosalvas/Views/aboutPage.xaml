<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EXAMEN2_RobertoManosalvas.Views.aboutPage"
             Title="About">

    <Grid Padding="20"
          RowSpacing="20"
          ColumnSpacing="20"
          VerticalOptions="Center"
          HorizontalOptions="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

  
        <Frame Grid.Row="0" Grid.Column="0" BorderColor="Black" Padding="10">
            <StackLayout>
                <Label Text="Nombre:" FontAttributes="Bold"/>
                <Label Text="Roberto Manosalvas"/>
            </StackLayout>
        </Frame>

        <Frame Grid.Row="0" Grid.Column="1" BorderColor="Black" Padding="10">
            <StackLayout>
                <Label Text="Fecha:" FontAttributes="Bold"/>
                <Label Text="05/06/2025"/>
            </StackLayout>
        </Frame>

        <Frame Grid.Row="1" Grid.Column="0" BorderColor="Black" Padding="10">
            <StackLayout>
                <Label Text="Intereses:" FontAttributes="Bold"/>
                <Label Text="Tecnología y videojuegos"/>
            </StackLayout>
        </Frame>

        <Frame Grid.Row="1" Grid.Column="1" BorderColor="Black" Padding="10">
            <StackLayout>
                <Label Text="Versión:" FontAttributes="Bold"/>
                <Label Text="1.0"/>
            </StackLayout>
        </Frame>

    </Grid>
</ContentPage>
