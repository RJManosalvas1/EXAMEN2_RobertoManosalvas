<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EXAMEN2_RobertoManosalvas.Views.mainPage"
             BackgroundColor="White"
             Title="Inicio">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

        <Label Text="Bienvenido a la aplicación de"
               FontSize="22"
               TextColor="Black"
               HorizontalOptions="Center" />
        <Label Text="Roberto José Manosalvas"
               FontSize="22"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Image Source="emoji.jpg"
               WidthRequest="150"
               HeightRequest="150"
               HorizontalOptions="Center" />

        <Button Text="Chistes"
                Clicked="OnJokesPageButton"
                WidthRequest="200"
                CornerRadius="8"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                TextColor="Black"
                HorizontalOptions="Center" />

        <Button Text="About"
                Clicked="OnAboutPageButton"
                WidthRequest="200"
                CornerRadius="8"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                TextColor="Black"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
